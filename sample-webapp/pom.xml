        <org.springframework.social.twitter-version>1.0.1.RELEASE</org.springframework.social.twitter-version>
		<org.springframework.roo-version>1.0.2.RELEASE</org.springframework.roo-version>
        <org.springframework.webflow-version>2.2.1.RELEASE</org.springframework.webflow-version>
		<org.aspectj-version>1.6.9</org.aspectj-version>
		<org.slf4j-version>1.6.4</org.slf4j-version>
		<fuzzydb.version>1.0.0.M4-SNAPSHOT</fuzzydb.version>
		<org.springframework.mobile-version>1.0.0.M3</org.springframework.mobile-version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.fuzzydb.attrs</groupId>
			<artifactId>org.fuzzydb.attrs</artifactId>
			<version>${fuzzydb.version}</version>
